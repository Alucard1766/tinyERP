<controls:MetroWindow x:Class="tinyERP.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      xmlns:local="clr-namespace:tinyERP"
                      Title="MainWindow"
                      Width="1200"
                      Height="600"
                      MinHeight="600"
                      MinWidth="1200">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Brushes.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <DockPanel>
        <Grid DockPanel.Dock="Left" Width="120" Background="{StaticResource AccentColorBrush2}">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Style="{DynamicResource CircleButtonExtend}" Width="100" Height="100">
                <iconPacks:PackIconMaterial Kind="Cash" Width="50" Height="50" />
            </Button>
            <Button Grid.Row="1" Style="{DynamicResource CircleButtonExtend}" Width="100" Height="100">
                <iconPacks:PackIconMaterial Kind="Archive" Width="50" Height="50" />
            </Button>
            <Button Grid.Row="2" Style="{DynamicResource CircleButtonExtend}" Width="100" Height="100">
                <iconPacks:PackIconMaterial Kind="AccountMultiple" Width="50" Height="50" />
            </Button>
            <Button Grid.Row="3" Style="{DynamicResource CircleButtonExtend}" Width="100" Height="100">
                <iconPacks:PackIconFontAwesome Kind="PencilSquareOutline" Width="50" Height="50" />
            </Button>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions><ColumnDefinition Width="*"></ColumnDefinition></Grid.ColumnDefinitions>
            <local:Budget Visibility="Visible"></local:Budget>

        </Grid>

    </DockPanel>

</controls:MetroWindow>
