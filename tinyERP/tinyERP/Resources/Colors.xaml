<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Colors for the MetroTheme, don't rename the keys-->
    <!--ACCENT COLORS-->
    <Color x:Key="HighlightColor">#ad00ad</Color>
    <!--80%-->
    <Color x:Key="AccentColor">#00AF00</Color>
    <!--60%-->
    <Color x:Key="AccentColor2">#4db938</Color>
    <!--40%-->
    <Color x:Key="AccentColor3">#44d62c</Color>
    <!--20%-->
    <Color x:Key="AccentColor4">#828f5b</Color>
    <Color x:Key="IdealForegroundColor">White</Color>
    <!--End of MetroTheme-->
    
    <Color x:Key="BorderColor">Black</Color>
    <Color x:Key="PopupWindowBackgroundColor">Aliceblue</Color>
    <Color x:Key="DataGridBackgroundColor">#E6E6E6</Color>

</ResourceDictionary>