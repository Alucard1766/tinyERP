<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Colors for the MetroTheme, don't rename the keys-->
    <!--ACCENT COLORS-->
    <Color x:Key="HighlightColor">#DB6300</Color>
    <!--80%-->
    <Color x:Key="AccentColor">#00AF00</Color>
    <!--60%-->
    <Color x:Key="AccentColor2">#1dca1d</Color>
    <!--40%-->
    <Color x:Key="AccentColor3">#45D145</Color>
    <!--20%-->
    <Color x:Key="AccentColor4">#008383</Color>
    <Color x:Key="IdealForegroundColor">White</Color>
    <!--End of MetroTheme-->
    
    <Color x:Key="BorderColor">Black</Color>
    <Color x:Key="PopupWindowBackgroundColor">Aliceblue</Color>
    <Color x:Key="DataGridBackgroundColor">#E6E6E6</Color>
    <Color x:Key="TextBoxFocusBorderColor">#00AF00</Color>

</ResourceDictionary>